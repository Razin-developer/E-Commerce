<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">E-Commerce</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          {{#if user}}
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">{{user.name}}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">
              <button type="button" class="btn btn-primary">
                Cart
                {{#if count}}
                <span class="badge bg-light text-dark" id="count">{{count}}</span>
                {{else}}
                <span class="badge bg-light text-dark" id="count">0</span>
                {{/if}}
              </button>
            </a>
          </li>
          <li class="nav-item">
            <a class="btn btn-primary" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log Out</a>
          </li>
          {{else}}
               <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign Up</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Log In</a>
          </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="container mt-5">
  <div class="card shadow-lg">
    <h5 class="card-header bg-success text-white">Order Details</h5>
    <div class="card-body">
      <p class="card-text"><strong>Name:</strong> {{name}}</p>
      <p class="card-text"><strong>Email:</strong> {{email}}</p>
      <p class="card-text"><strong>Phone:</strong> {{phone}}</p>
      <p class="card-text"><strong>Address:</strong> {{address}}, {{city}}, {{country}} - {{pincode}}</p>
      <p class="card-text"><strong>Transaction ID:</strong> {{orderId}}</p>
      <p class="card-text"><strong>Order Date:</strong> {{date}}</p>
      <p class="card-text"><strong>Payment Method:</strong> {{how}}</p>
      <p class="card-text"><strong>Order Progress:</strong><br>
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: {{progres}}%;" aria-valuenow="{{progres}}" aria-valuemin="0" aria-valuemax="100">{{progress}}</div>
        </div>
      </p>
      <a href="/edit-order/{{orderId}}" class="btn btn-primary shadow-sm">Edit Order</a>
      {{#if cancel}}
      <a href="/delete-order/{{orderId}}" class="btn btn-danger shadow-sm">Cancel Order</a>
      {{else}}
      <a href="/delete-order/{{orderId}}" class="btn btn-danger shadow-sm">Delete Order</a>
      {{/if}}
      <a href="/" class="btn btn-secondary shadow-sm">Go Back</a>
    </div>
  </div>
</div>