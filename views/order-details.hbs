{{> user-header}}

<div class="container mt-5">
  <div class="card shadow-lg">
    <h5 class="card-header bg-success text-white">Order Details</h5>
    <div class="card-body">
      <p class="card-text"><strong>Name:</strong> {{name}}</p>
      <p class="card-text"><strong>Email:</strong> {{email}}</p>
      <p class="card-text"><strong>Phone:</strong> {{phone}}</p>
      <p class="card-text"><strong>Address:</strong> {{address}}, {{city}}, {{country}} - {{pincode}}</p>
      <p class="card-text"><strong>Transaction ID:</strong> {{orderId}}</p>
      <p class="card-text"><strong>Order Date:</strong> {{date}}</p>
      <p class="card-text"><strong>Payment Method:</strong> {{how}}</p>
      <p class="card-text"><strong>Order Progress:</strong><br>
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: {{progres}}%;" aria-valuenow="{{progres}}" aria-valuemin="0" aria-valuemax="100">{{progress}}</div>
        </div>
      </p>
      <a href="/edit-order/{{orderId}}" class="btn btn-primary shadow-sm">Edit Order</a>
      {{#if cancel}}
      <a href="/delete-order/{{orderId}}" class="btn btn-danger shadow-sm">Cancel Order</a>
      {{else}}
      <a href="/delete-order/{{orderId}}" class="btn btn-danger shadow-sm">Delete Order</a>
      {{/if}}
      <a href="/" class="btn btn-secondary shadow-sm">Go Back</a>
    </div>
  </div>
</div>