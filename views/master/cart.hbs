{{> header}}

<div class="container mt-5">
  <!-- Welcome Section -->
  <div class="text-center mb-5">
    <a href="/master-delete-all-cart" class="btn btn-danger btn-lg mt-4">Delete All Cart</a>
  </div>
</div>

<!-- Responsive Table Section -->
<div class=" p-5">
  <div class="table-responsive">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col"></th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Number of items</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each details}}
        <tr>
          <th scope="row">&middot;</th>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.no}}</td>
          <td>
            <a href="/master-view-products/{{this._id}}" class="btn btn-primary">View Products</a>
          </td>
          <td>
            <a href="/master-delete-cart/{{this._id}}" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>