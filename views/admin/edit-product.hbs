
<div class="container mas">
  <h1 class="text-center mb-4">Edit Product</h1>
  <form action="/edit-product/{{product._id}}/{{adminId}}" method="POST" enctype="multipart/form-data">
  <!-- Email input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="text" id="form1Example1" class="form-control" name="name"  value="{{product.name}}"/>
    <label class="form-label" for="form1Example1">Name</label>
  </div>
 <div data-mdb-input-init class="form-outline mb-4">
    <input type="text"  id="form1Example2" class="form-control" name="category" value="{{product.category}}" />
    <label class="form-label" for="form1Example2">category</label>
  </div>
  <!-- Password input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="text"  id="form1Example2" class="form-control" name="des" value="{{product.des}}" />
    <label class="form-label" for="form1Example2">Description</label>
  </div>
    <div data-mdb-input-init class="form-outline mb-4">
    <input type="number"  id="form1Example2" class="form-control" name="price" value="{{product.price}}" />
    <label class="form-label" for="form1Example2">Price</label>
  </div>
  <div class="text-center">
  <img src="/images/products/{{product._id}}.jpg" id="img">
  </div>
   <div data-mdb-input-init class="form-outline mb-4">
    <input type="file" id="form1Example1" class="form-control" name="image" onchange="viewImage(event)" />
    <label class="form-label" for="form1Example1">Image (.jpg is needed)</label>
  </div>


  <!-- 2 column grid layout for inline styling -->
 

  <!-- Submit button -->
  <div class="text-center"><button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block padding-auto">Edit Product</button></div>
  
  <div class="text-center go-back m-4"><a href="/admin">Go Back</a></div>
  
</form></div>

<script>
  function viewImage (event) {
    document.getElementById('img').src = URL.createObjectURL(event.target.files[0])
  }
</script>