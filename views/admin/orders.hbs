{{!-- Admin Home Page --}}
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Admin Panel</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          {{#if logged}}
            {{#if admin}}
              <li class="nav-item">
                <a class="nav-link" href="/admin">{{admin.name}}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/add-product">Add Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-primary" href="/admin-orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-danger" href="/admin-logout">Logout</a>
              </li>
            {{/if}}
          {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/admin-login">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin-login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin-signup">Signup</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="container p-4">
  <div class="table-responsive">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col"></th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Phone</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each order}}
        <tr>
          <th scope="row">&middot;</th>
          <td>{{this.name}}</td>
          <td>{{this.address}}</td>
          <td>{{this.phone}}</td>
          <td>
            <a href="/admin-order-details/{{this._id}}" class="btn btn-primary btn-sm">View Details</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-light text-center py-3">
  <p>&copy; 2024 Admin Panel | Designed with ❤️</p>
</footer>