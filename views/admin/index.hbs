{{!-- Admin Home Page --}}
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Admin Panel</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          {{#if logged}}
            {{#if admin}}
              <li class="nav-item">
                <a class="nav-link" href="/admin">{{admin.name}}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/add-product">Add Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-primary" href="/admin-orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-danger" href="/admin-logout">Logout</a>
              </li>
            {{/if}}
          {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/admin-login">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin-login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin-signup">Signup</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="container mt-5">
  <!-- Welcome Section -->
  <div class="text-center mb-5">
    <h1 class="display-4 text-primary">Welcome to Admin Panel</h1>
    <p class="lead">Manage your products effectively and efficiently.</p>
    <a href="/add-product" class="btn btn-primary btn-lg mt-4">Add New Product</a>
  </div>
</div>

<!-- Responsive Table Section -->
<div class="container p-4">
  <div class="table-responsive">
    <table class="table" id="myTable">
      <thead class="thead-light">
        <tr>
          <th scope="col"></th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each details}}
        <tr>
          <th scope="row">&middot;</th>
          <td>{{this.name}}</td>
          <td>{{this.price}}</td>
          <td>{{this.category}}</td>
          <td>{{this.des}}</td>
          <td><img class="checkout-img" src="/images/products/{{this._id}}.jpg" alt="Product Image" style="max-width: 50px;"></td>
          <td>
            <a href="/edit-product/{{this._id}}/{{../admin}}" class="btn btn-primary">Edit</a>
          </td>
          <td>
            <a href="/delete-product/{{this._id}}/{{../admin}}" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-light text-center py-3">
  <p>&copy; 2024 Admin Panel | Designed with ❤️</p>
</footer>

<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
  });
</script>